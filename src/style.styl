@import 'url(https://fonts.googleapis.com/css?family=Montserrat:100,100italic,200,200italic,300,300italic,regular,italic,500,500italic,600,600italic,700,700italic,800,800italic,900,900italic)';
body 
    margin: 0
    font-family Montserrat, sans-serif

.inputs
    padding 10px
    margin: 10px 0 0 0
    border-radius: 5px
    font-size: 14px
.submits
    background: #6c99d0
    border: none
    padding: 10px
    border-radius: 5px

.search
    padding: 10px 50px
    text-align: center
.display
    padding: 10px 50px
    text-align: center

.list-item-pokemon
    display flex
    align-items center
    color black
    padding 20px
    text-transform capitalize
  
    .sprites-container
        position relative
        width 96px
        height 96px
    .sprite
        position absolute
        width 96px
        height 96px
    p
        padding: 0 20px 0 20px
    button
        background none
        border: 1px solid black
        border-radius 5px
        padding 10px
        margin: 0 20px
        transition: all 0.3s
        &:hover
            cursor: pointer;
            background: black;
            color: white;
    &:nth-child(odd)
        background #8bc6e9
       

    &:nth-child(even)
        background #6c99d0

  .red
        background-color: #ed6161 !important
